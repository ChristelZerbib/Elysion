<form method="post" action="{{ path('bonus_effects_list_delete', {'id': bonus_effects_list.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce bonus / malus / effet ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ bonus_effects_list.id) }}">
