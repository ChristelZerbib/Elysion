{% extends 'base.html.twig' %}

{% block title %}BonusEffectsList index{% endblock %}

{% block body %}
    <h1>Bonus et effets d'alliages</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Type</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bonus_effects_list in bonus_effects_lists %}
            <tr>
                <td>{{ bonus_effects_list.id }} ({{ bonus_effects_list.rank.type }} de rang {{ bonus_effects_list.rank.number }} : {{ bonus_effects_list.rank.price }} PO)</td>
                <td>{{ bonus_effects_list.name }}</td>
                <td>{{ bonus_effects_list.description }}</td>
                <td>
                    <a href="{{ path('bonus_effects_list_show', {'id': bonus_effects_list.id}) }}">Voir</a>
                    <a href="{{ path('bonus_effects_list_edit', {'id': bonus_effects_list.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('bonus_effects_list_new') }}">Create new</a>
{% endblock %}
