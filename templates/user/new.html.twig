{% extends 'base.html.twig' %}

{% block body %}
    <h1>Créer un nouvel utilisateur</h1>

{{ form_start(form) }}
    {{ form_label(form.username) }}
    {{ form_widget(form.username) }}
<br>
    {{ form_label(form.roles) }}
    {{ form_widget(form.roles) }}
<br>
{{ form_label(form.password, 'Mot de passe : ') }}
    {{ form_widget(form.password.first) }}
<br>
    {{ form_widget(form.password.second) }}
<br>
    {{ form_label(form.pp) }}
    {{ form_widget(form.pp) }}

    <br>
    <button class="btn btn-dark text-info border-info btn-block">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
    <br>
    <a class="btn btn-dark text-info border-info btn-block" href="{{ path('user_index') }}">Retour à la liste des utilisateurs</a>
{% endblock %}
